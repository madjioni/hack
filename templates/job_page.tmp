<div>
    <h4>Posao</h4>
    [if prvo]
    <p>
        Poslodavac: <a href="/user/id/{poslodavac.id}">{poslodavac.firstname}</a>
        Naziv: {posao.title} <br>
        Lokacija: {posao.location} <br>
        Datum: {posao.datestart} - {posao.dateend} <br>
        Broj radnika: {posao.num} <br>
        Plata: {posao.price} ({posao.pricetype}) <br>
        Radno vreme: {posao.time} <br>
        Transport: {posao.transportation} <br>
        Opis: {posao.description} <br>
    </p>
    [end]

    [if drugo]
        <input type="hidden" value="{posao.id}" id="id">
        <input type="text" id="title" value="{posao.title}"><br/>
        <textarea id="description">{posao.description}</textarea><br/>
        <input type="text" id="location" value="{posao.location}"> <br/>
        <input type="date" id="datestart" value="{posao.datestart}"><br/>
        <input type="date" id="dateend" value="{posao.dateend}"><br/>
        <input type="number" id="activeend" value="{posao.activeend}"><br/>
        <input type="number" id="num" min="1" max="100" value="{posao.num}"><br/>
        <input type="text" id="price" value="{posao.price}"><br/>
        <select id="pricetype" value="{posao.pricetype}"><br>
            <option value="1">RSD/dan</option>
            <option value="2">RSD/h</option>
            <option value="3">RSD/kg</option>
        </select> <br>
        <input type="text" id="time" value="{posao.time}"><br/>
        <input type="text" id="transport" value="{posao.transportation}"> <br>
        <select id="category" value="{posao.idcat}"><br>
            <option value="1">KOPAC</option>
            <option value="2">BERAC</option>
        </select>
    
        <div id="izmene_res"></div>
        <div id="dugme_izmeni">Sacuvaj izmene</div>

        <!-- lista radnika -->

        <!-- aktivan jos -->
        [if aktivan]
            <p>Ima {radnici|count} radnika prijavljeno.</p>
            <table>
            [foreach radnik in radnici]
                <tr>
                    <td>{radnik.firstname} {radnik.lastname} ({radnik.mail}, {radnik.phone})</td>
                </tr>
            [end]
            </table>
        <!-- zavrsen oglas -->
        [else]
            <p>Ima {radnici|count} radnika prijavljeno.</p>
            <table>
            [foreach radnik in radnici]
                <tr>
                    <td><input type="checkbox"></td>
                    <td>{radnik.firstname} {radnik.lastname} ({radnik.mail}, {radnik.phone})</td>
                </tr>
            [end]
            </table>

            <div id="dugme_obavesti">Izaberi radnike</div>
        [end]
    [end]

    [if trece]
    <p>
        Poslodavac: <a href="/user/id/{poslodavac.id}">{poslodavac.firstname}</a>
        Naziv: {posao.title} <br>
        Lokacija: {posao.location} <br>
        Datum: {posao.datestart} - {posao.dateend} <br>
        Broj radnika: {posao.num} <br>
        Plata: {posao.price} ({posao.pricetype}) <br>
        Radno vreme: {posao.time} <br>
        Transport: {posao.transportation} <br>
        Opis: {posao.description} <br>
    </p>

    <!-- provera da li je prijavljen vec ili ne -->
    <div id="dugme_prijava">prijava</div>
    [end]

</div>

<script type="text/javascript" src="/{JS_DIR}/job_page.js"></script>